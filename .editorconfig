root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.css]
indent_style = tab

[*.js]
indent_style = tab

[*.py]
indent_style = space
indent_size = 4

[*.html]
indent_style = tab

[*.yml]
indent_size = 2
indent_style = space

[package.json]
indent_style = space
indent_size = 2
